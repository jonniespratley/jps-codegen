/**This is a sample application.*/package com.test.app.commands{	import com.test.app.model.*;	import com.test.app.events.*;	import com.test.app.vo.*;	import com.test.app.business.*;		import com.adobe.cairngorm.commands.ICommand;	import com.adobe.cairngorm.control.CairngormEvent;	import mx.collections.ArrayCollection;	import mx.controls.Alert;	import mx.rpc.IResponder;	import mx.rpc.events.FaultEvent;	import mx.rpc.events.ResultEvent;	import mx.utils.ArrayUtil;	public class RemovePostsCommand implements ICommand, IResponder	{		private var model:ModelLocator = ModelLocator.getInstance();		public function execute( event:CairngormEvent ) : void		{			var evt:RemovePostsEvent = event as RemovePostsEvent;					var delegate:PostsServiceDelegate = new PostsServiceDelegate( this );				 delegate.removePosts( evt.vo, evt.index );		}		public function result( data:Object ) : void		{			var result:ResultEvent = data as ResultEvent;						//Remove the item that was deleted at the index, from the token			model.PostsCollection.removeItemAt( result.token.index );		}		public function fault( fault:Object ):void		{			var faultEvt:FaultEvent = fault as FaultEvent;									Alert.show(faultEvt.fault.toString(), "Service Error");						trace(faultEvt.fault.faultString);		}	}}       
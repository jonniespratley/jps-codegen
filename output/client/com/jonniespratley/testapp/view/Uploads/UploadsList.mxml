<?xml version="1.0" encoding="utf-8"?>
<!-- 
UploadsList.mxml: This component holds listing all records in the Uploads table and removing a Uploads record
Test app by jonnie spratley 
-->
<mx:VBox
	width="100%"
	height="100%"
	creationComplete="init()"
	xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;

			import com.jonniespratley.testapp.events.*;
			import com.jonniespratley.testapp.vo.*;
			import com.jonniespratley.testapp.model.ModelLocator;

			[Bindable] private var model:ModelLocator = ModelLocator.getInstance();

			/* I add an event listener to the datagrid as well as call for the @TABLE records */
			private function init():void
			{
				getUploads();
				dg_Uploads.addEventListener( KeyboardEvent.KEY_DOWN, keyboardHandler );
			}
			
			/* I get all of the Uploads from the database and display them in a datagrid */
			private function getUploads():void
			{
				var e_getUploads:GetUploadsEvent = new GetUploadsEvent();
					 e_getUploads.dispatch();
			}

			/* I remove a Uploads from the database */
			private function removeUploads( item:Object ):void
			{
				var vo:UploadsVO = new UploadsVO( item );
				var voIndex:int = dg_Uploads.selectedIndex;
				var e_removeUploads:RemoveUploadsEvent = new RemoveUploadsEvent( vo, voIndex );
					 e_removeUploads.dispatch();
			}

			/* I set the current selected Uploads on the model, for all areas of application */
			private function onSelect( event:Event ):void
			{
				 model.selectedUploads = new UploadsVO( event.currentTarget.selectedItem );
			}

			/* I handle when the keyboard delete key is pressed, I remove a Uploads, only if it is selected first */
			private function keyboardHandler( event:KeyboardEvent ):void
			{
				if ( event.keyCode == 8 &&  dg_Uploads.selectedIndex != -1 )
				{
					removeUploads( dg_Uploads.selectedItem );
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:Panel width="100%" height="100%" layout="vertical" title="Uploads List" resizeEffect="Resize">
		
		<!-- Uploads DataGrid -->
		<mx:DataGrid id="dg_Uploads" 
			width="100%" 
			height="100%" 
			dataProvider="{ model.UploadsCollection }" 
			change="onSelect( event )">
			<mx:columns>
				
			<mx:DataGridColumn headerText="Id" dataField="id"/>
			<mx:DataGridColumn headerText="Name" dataField="name"/>
			<mx:DataGridColumn headerText="Path" dataField="path"/>
			<mx:DataGridColumn headerText="Size" dataField="size"/>
			<mx:DataGridColumn headerText="Type" dataField="type"/>
			</mx:columns>
		</mx:DataGrid>

		
		<!-- Uploads Action Buttons-->
		<mx:ControlBar>
			
			<mx:Button label="Refresh" 
				click="getUploads()"/>
			
			<mx:Button label="Remove" 
				click="removeUploads( dg_Uploads.selectedItem )" 
				enabled="{ dg_Uploads.selectedIndex != -1 ? true : false }"/>
		</mx:ControlBar>
		
	</mx:Panel>
	
</mx:VBox>       